	<page id="RoleManage" js="/webresources/script/validate.js">
		<report id="report1" title="角色管理" type="listform"  pagesize="50|30|15|-1" navigate="${navigatepagesizepage1.report3.navigate}">
			<display valuetdwidth="100px" labeltdwidth="80px" labelalign="right"
				valuealign="left">
				<col column="Role_Id" label="角色编号" />
				<col column="Role_Name" label="角色名称" ></col>
			</display>
			<sql>
				<select>
					<value>
					<![CDATA[SELECT * FROM t_role   order by Role_Id ]]>
					</value>				

				</select>
				 <insert>
				    insert into role (@{Role_Name});
				  </insert>
				<update>
					update
					role (@{Role_Name})
					where RoleId=@{Role_Id};			
				  </update>
				<delete>
					delete from t_role where Role_Id=@{Role_Id};
				  </delete>

			</sql>

		</report>

	</page>
