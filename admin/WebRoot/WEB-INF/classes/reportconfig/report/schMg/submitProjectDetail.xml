				<col property="btn2" column="{non-fromdb}" label="是否参赛"></col>
			</display>
			<format>
				<imports>
					<import>com.wabacus.util.*</import>
					<import>com.wabacus</import>
				</imports>
				<value>
			   <![CDATA[					
					if(rrequest.getShowtype() == Consts.DISPLAY_ON_PAGE)
					{
						Team_Status_Join=Team_Status_Join==null?"否":Team_Status_Join.trim();		
						System.out.println("Team_Status_Join:"+Team_Status_Join);				
						if(Team_Status_Join.equals("是"))
						{
	 						btn2="<input type=\"button\" value=\"取消参赛\" onclick=\"invokeServerActionForComponent('submitContestDetail1','report2','cn.edu.hrbeu.stuMg.SubmitCont.updateMemAndTeaAttendState',{memid:'"+Team_Mem_ID+"',tag:'学生',state:'否'},true,testInvokeCallbackMethod1)\">"; 											
						}
						else
						{
	 						btn2="<input type=\"button\" value=\"点击参赛\" onclick=\"invokeServerActionForComponent('submitContestDetail1','report2','cn.edu.hrbeu.stuMg.SubmitCont.updateMemAndTeaAttendState',{memid:'"+Team_Mem_ID+"',tag:'学生',state:'是'},true,testInvokeCallbackMethod1)\">"; 											
							
						}
						
						java.sql.Connection  conn = rrequest.getConnection(rbean.getSbean().getDatasource());
						java.sql.PreparedStatement pstmt = conn.prepareStatement("select grade_name from t_gradeinfo where grade_id = ?");
						pstmt.setString(1,grade_name);
						java.sql.ResultSet rs =  pstmt.executeQuery();
						while(rs.next()){
							grade_name = rs.getString("grade_name");
						}

						rs.close();
						pstmt.close();
						
						
					}
				  ]]>
				</value>
			</format>
			<sql aftersave="testAfterSaveCallback">
				<select>
					<value>
					<![CDATA[SELECT t.*,m.mem_name,g.grade_id as grade_name FROM T_TeamInfo t left join  t_memberinfo m on t.Team_Mem_Num = m.mem_id left join t_gradeinfo g on m.mem_grade = g.grade_id where {#condition#}  ]]>
					</value>
					<condition name="Pro_ID" hidden="true">
						<value> 
    						<![CDATA[(t.Team_Pro_ID = '#data#')]]>
						</value>
					</condition>
				</select>
				<insert>
					<params>
						<param name="Pro_ID" value="request{pro_id}"></param>
					</params>
					insert into T_TeamInfo
					(Team_Mem_ID=uuid{},Team_Pro_ID=#{Pro_ID},@{Team_Mem_Order},@{Team_Mem_Num},@{Team_Mem_Dep},Team_Mem_Grade=@{grade_name},@{Team_Mem_Role});
				</insert>
				<update>
					update T_TeamInfo
					(@{Team_Mem_Order},@{Team_Mem_Num},@{Team_Mem_Dep},Team_Mem_Grade=@{grade_name},@{Team_Mem_Role})
					where Team_Mem_ID=@{Team_Mem_ID};
					update t_memberinfo(mem_grade =
					@{grade_name}) where mem_id = @{Team_Mem_Num};
				</update>
				<delete>
					delete from T_TeamInfo where Team_Mem_ID=@{Team_Mem_ID};
				</delete>
			</sql>
		</report>

